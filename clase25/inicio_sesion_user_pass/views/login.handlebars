<section class="p-3 col-lg-4 m-auto bg-secondary" style="--bs-bg-opacity: .5;">
	{{#if msj}}
	<p>{{msj}}</p>
	{{/if}}
	<h1 class="text-center mb-3">Iniciar sesión</h1>
	<form action="/login" method="POST" id="form-add-product" class="mb-2">
		<div class='mb-3'>
			<input id="name-product" class="form-control" type='text' name='name' placeholder="Nombre" />
		</div>
		<div class='mb-3'>
			<input id="price-product" class="form-control" type='password' name='password' placeholder="Contraseña" />
		</div>
		<div class='d-flex justify-content-center'>
			<input class="btn btn-success" type='submit' value='Ingresar' />
		</div>
	</form>
	<div class='d-flex justify-content-center'>
	<a class="btn btn-primary" href="/register">Registrarte</a>
	</div>
	
</section>